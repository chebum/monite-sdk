{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
